# GlutenConnect Environment Configuration

# Application
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173

# Test Mode (shows test banner and quick sign-in) - TODO: Remove before production
VITE_TEST_MODE=true

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/glutenconnect"
REDIS_URL="redis://localhost:6379"

# Authentication (Auth0)
AUTH0_DOMAIN=your-domain.auth0.com
AUTH0_CLIENT_ID=your_client_id
AUTH0_CLIENT_SECRET=your_client_secret
AUTH0_AUDIENCE=https://api.glutenconnect.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
FIELD_ENCRYPTION_KEYS=key1,key2,key3

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
GOOGLE_PLACES_API_KEY=your_google_places_api_key
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=glutenconnect-uploads
AWS_REGION=us-west-2

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key

# Email Service
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@glutenconnect.com

# Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGINS=http://localhost:5173,https://glutenconnect.com
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_BACKGROUND_CHECKS=false
ENABLE_VIDEO_CALLS=false
ENABLE_AI_MODERATION=true