# GF'd Dating App - Production Environment Variables
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# Application
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://gfd.com

# Test Mode (MUST be false in production)
VITE_TEST_MODE=false

# Database (Use managed services in production)
DATABASE_URL="postgresql://username:password@prod-db.region.rds.amazonaws.com:5432/gfd_prod"
REDIS_URL="redis://prod-redis.cluster.region.cache.amazonaws.com:6379"
MONGODB_URL="mongodb+srv://username:password@prod-cluster.mongodb.net/gfd_analytics"

# Authentication & Security (CHANGE ALL KEYS)
JWT_SECRET=your_super_secure_production_jwt_secret_256_bits_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (CHANGE ALL KEYS - 32 characters each)
ENCRYPTION_KEY=your_production_32_char_encryption_key
FIELD_ENCRYPTION_KEYS=prod_key1_32chars,prod_key2_32chars,prod_key3_32chars

# Supabase (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key

# File Storage (AWS S3 Production)
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_S3_BUCKET=gfd-uploads-prod
AWS_REGION=us-west-2

# External APIs (Production Keys)
GOOGLE_PLACES_API_KEY=your_production_google_places_api_key
NUTRITIONIX_APP_ID=your_production_nutritionix_app_id
NUTRITIONIX_API_KEY=your_production_nutritionix_api_key

# Payment Processing (Stripe Live Keys)
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Email Service (Production)
SENDGRID_API_KEY=your_production_sendgrid_api_key
FROM_EMAIL=noreply@gfd.com

# Monitoring & Analytics (Production)
SENTRY_DSN=your_production_sentry_dsn
DATADOG_API_KEY=your_production_datadog_api_key

# Push Notifications
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Rate Limiting (Stricter in production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security (Production domains only)
CORS_ORIGINS=https://gfd.com,https://www.gfd.com
BCRYPT_ROUNDS=12

# Feature Flags (Production)
ENABLE_BACKGROUND_CHECKS=true
ENABLE_VIDEO_CALLS=true
ENABLE_AI_MODERATION=true
ENABLE_ANALYTICS=true

# SSL/TLS
SSL_CERT_PATH=/etc/letsencrypt/live/gfd.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/gfd.com/privkey.pem